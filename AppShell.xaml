<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ThinkFast.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ThinkFast"
    xmlns:pages="clr-namespace:ThinkFast.Pages"
   
    Shell.FlyoutBehavior="Disabled"
     Shell.TabBarIsVisible="True"
    Title="ThinkFast"
    >



    <TabBar>
        <!-- Home Tab -->
        <Tab Title="AI" Icon="ai.jpg">
            <ShellContent
                Title="AiPage"
                ContentTemplate="{DataTemplate pages:AiPage}"
                Route="AiPage" />
        </Tab>

        <!-- Profile Tab -->
       
        <Tab Title="Flash Card" Icon="fc.png">
            <ShellContent
                Title="FlashcardPage"
                ContentTemplate="{DataTemplate pages:FlashcardPage}"
                Route="FlashcardPage" />
        </Tab> 

        <!-- Settings Tab -->
        <Tab Title="Test" Icon="t.png">
            <ShellContent
                Title="TestPage"
                ContentTemplate="{DataTemplate pages:TestCardPage}"
                Route="TestCardPage" />
        </Tab>
    </TabBar>


</Shell>
