<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThinkFast.Pages.FlashcardPage"
             Title="Flashcard Sets">

    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Label Text="Available Flashcard Sets"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <Label x:Name="NoSetsLabel"
                   Text="No flashcard sets available. Generate some flashcards first!"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"
                   IsVisible="False" />

            <CollectionView x:Name="FlashcardsCollectionView"
                           ItemsSource="{Binding FlashcardSets}"
                           IsVisible="False"
                           SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                BackgroundColor="White"
                                Padding="0"
                                Margin="0">
                           
                            <VerticalStackLayout Spacing="10" Padding="15">
                                <Image Source="{Binding ImageSource}"
HeightRequest="120"
Aspect="AspectFill"
HorizontalOptions="Center"
Margin="0,0,0,10"/>
                                <Label Text="{Binding Title}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />

                                <Label Text="{Binding Flashcards.Count, StringFormat='{0} flashcards'}"
                                       FontSize="16"
                                       HorizontalOptions="Center" />

                                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                                    <Button Text="View"
                                            WidthRequest="120"
                                            HeightRequest="40"
                                            CornerRadius="20"
                                            BackgroundColor="White"
                                            TextColor="#007CFF"
                                            BorderColor="#007CFF"
                                            BorderWidth="2"
                                            Clicked="OnViewFlashcardsClicked" />

                                    <Button Text="Delete"
                                            WidthRequest="120"
                                            HeightRequest="40"
                                            CornerRadius="20"
                                            BackgroundColor="White"
                                            TextColor="Red"
                                            BorderColor="Red"
                                            BorderWidth="2"
                                            Clicked="OnDeleteSetClicked" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>