<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThinkFast.Pages.ShowFlashcardPage"
             Title="{Binding Title}">

    <VerticalStackLayout Margin="20" >
        <Label Text="{Binding Title}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
              VerticalOptions="Start"
               Margin="0,10,0,20" />

        <Label x:Name="CounterLabel"
               Text="{Binding CounterText}"
               FontSize="16"
               HorizontalOptions="Center"
               Margin="0,0,0,10" />

        <Frame BorderColor="Gray"
               CornerRadius="10"
               HasShadow="True"
               Margin="20,10"
               Padding="15"
               HeightRequest="450"
               VerticalOptions="Center">
            <Label x:Name="ContentLabel"
                   Text="{Binding CurrentText}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Padding="10" />
        </Frame>

        <Button x:Name="FlipButton"
                Text="Show Answer"
                HorizontalOptions="Center"
                Margin="0,40,0,20"
                WidthRequest="350"
                FontSize="20"
                      BackgroundColor="#007CFF"
     HeightRequest="60"     
            CornerRadius="16"  
                Command="{Binding FlipCardCommand}" />

        <Grid Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Previous"
HorizontalOptions="Start"
WidthRequest="150"
 FontSize="20"   
          BackgroundColor="#007CFF"
   HeightRequest="60"     
          CornerRadius="16"
          VerticalOptions="End"
                    Command="{Binding PreviousCardCommand}" />

            <Button Text="Next"
                 Grid.Column="1"
                 HorizontalOptions="End"
                 
                   WidthRequest="150"
FontSize="20"   
         BackgroundColor="#007CFF"
  HeightRequest="60"     
         CornerRadius="16"
             VerticalOptions="End"
                    Command="{Binding NextCardCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>